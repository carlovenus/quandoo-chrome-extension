{
    "manifest_version": 2,
    "name": "Quandoo Button",
    "description": "Find a table in your area with Quandoo.",
    "version": "1.0",
    "icons": {
        "48" : "logo.png"
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": "logo.png"
    },
    "permissions": ["tabs", "https://maps.googleapis.com/*", "https://maps.gstatic.com/*", "geolocation"],
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://maps.googleapis.com/ https://maps.gstatic.com/; object-src 'self'"
}